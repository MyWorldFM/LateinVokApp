<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffade56c"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/quest_textView"
            android:textSize="40dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@id/relativelayout3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/konj_button1"
        android:background="#ff33b5e5"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/konj_button2"
            android:background="#ff33b5e5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/konj_button1"
            android:layout_alignRight="@+id/konj_button1"
            android:layout_alignEnd="@+id/konj_button1"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/konj_button3"
            android:background="#ff33b5e5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/konj_button2"
            android:layout_alignRight="@+id/konj_button2"
            android:layout_alignEnd="@+id/konj_button2"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/konj_button4"
            android:background="#ff33b5e5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/konj_button3"
            android:layout_alignRight="@+id/konj_button3"
            android:layout_alignEnd="@+id/konj_button3"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/konj_button5"
            android:background="#ff33b5e5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/konj_button4"
            android:layout_alignRight="@+id/konj_button4"
            android:layout_alignEnd="@+id/konj_button4"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipp"
        android:id="@+id/tippbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:background="#ff99cc00"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
</RelativeLayout>
